@model JobScope.ViewModels.JobsModel  

<div class="container">
    <br />
    <h1> <center>Create Job </center></h1>
    <br />
    <form method="post" asp-action="AddJobs" asp-controller="Jobs">
        <div class="form-group">
            <label for="formGroupExampleInput">Job Description</label>
            <input asp-for="JobDescription" type="text" class="form-control" id="formGroupExampleInput" placeholder="Job Description">
            <span asp-validation-for="JobDescription" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="formGroupExampleInput">Job Position</label>
            <input asp-for="JobPosition" type="text" class="form-control" id="formGroupExampleInput" placeholder="Job Position">
            <span asp-validation-for="JobPosition" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="formGroupExampleInput">Location</label>
            <input asp-for="Location" type="text" class="form-control" id="formGroupExampleInput" placeholder="Job Location">
            <span asp-validation-for="Location" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="formGroupExampleInput">Department</label>
            <input asp-for="Department" type="text" class="form-control" id="formGroupExampleInput" placeholder="Job Department">
            <span asp-validation-for="Department" class="text-danger"></span>
        </div>

        <div class="mt-2">
           <button type="submit" class="btn btn-success">Create Job</button>
        </div>
    </form>

</div>

 @section Scripts{@{await Html.RenderPartialAsync("_ValidationScriptsPartial");} }
