@{

}
@model List<JobScope.ViewModels.JobListModel>


<div class="container-fluid">
    <br />

    <h4> All Jobss </h4>
    <br />
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            @if (User.IsInRole("Admin"))
            {
                <a asp-action="CreateJobs" asp-controller="Jobs" class="btn btn-outline-success">Add Jobs</a>
            }
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Position</th>
                            <th>Location</th>
                            <th>Department</th>
                            <th>Updated</th>
                            <th>Description</th>
                            <th>  </th>
                        </tr>
                    </thead>

                    @if (Model != null)
                    {
                        <tbody>
                            @foreach (var items in Model)
                            {
                                <tr>
                                    <td>@items.JobPosition</td>
                                    <td>@items.Location</td>
                                    <td>@items.Department</td>
                                    <td>@items.Updated</td>
                                    <td>@items.JobDescription</td>

                                    <td>
                                        @if (User.IsInRole("Admin"))
                                        {
                                            <a class="text-danger ml-1" asp-action="EditJob" asp-controller="Jobs" asp-route-id="@items.Id" onclick="return confirm('Are you sure you want to Edit this Job @items.JobPosition?')">
                                                <i class="far fa-edit"></i>
                                            </a>

                                            <a class="text-danger ml-1" asp-action="DeleteJob" asp-controller="Jobs" asp-route-id="@items.Id" onclick="return confirm('Are you sure you want to delete this Job @items.JobPosition?')">
                                                <i class="fas fa-trash-alt fa-lg"></i>
                                            </a>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    }
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <link rel="stylesheet" type="text/css" href="~/css/JobScopeStyle.css" />
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.21/css/jquery.dataTables.css">
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.21/js/jquery.dataTables.js">
    </script>
    <script type="text/javascript">
    $(document).ready(function () {
    $('#dataTable').DataTable();
    });

    </script>

}