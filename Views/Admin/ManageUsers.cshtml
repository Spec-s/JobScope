@model List<JobScope.Models.ApplicationUser>

@{

}

<div class="container-fluid">
    <br />

    <h4> All Users </h4>
    <br />
    <div class="card shadow mb-4">
        <div class="card-header py-3">
           
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Email</th>
                            <th>Id #</th>
                            <th></th>
                            <th>  </th>
                        </tr>
                    </thead>

                    @if (Model != null)
                    {
                        <tbody>
                            @foreach (var items in Model)
                            {
                                <tr>
                                    <td>@items.FirstName</td>
                                    <td>@items.LastName</td>
                                    <td>@items.Email</td>
                                    <td>@items.SchoolId</td>
                                    <td>
                                           <a class="text-danger ml-1" asp-action="EditUser" asp-controller="Admin" asp-route-id="@items.Id" onclick="return confirm('Are you sure you want to edit this user?')">
                                                <i class="far fa-edit"></i>
                                            </a>

                                            <a class="text-danger ml-1" asp-action="DeleteUser" asp-controller="Admin" asp-route-id="@items.Id" onclick="return confirm('Are you sure you want to edit this user?')">
                                                <i class="fas fa-trash-alt fa-lg"></i>
                                            </a>
                                        
                                    </td>
                                </tr>
                            }
                        </tbody>
                    }
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.21/css/jquery.dataTables.css">
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.21/js/jquery.dataTables.js">
    </script>
    <script type="text/javascript">
    $(document).ready(function () {
    $('#dataTable').DataTable();
    });

    </script>

}