
@{
}

@model JobScope.Models.ApplicationUser

<div class="container">
    <br />
    <h1>Edit Users Information</h1>
    <br />
    <form asp-action="UpdateUser" asp-controller="Admin" method="post">
        @Html.HiddenFor(x => x.Id)
        <div class="form-group">
            <label for="formGroupExampleInput">First Name</label>
            <input asp-for="FirstName" type="text" class="form-control" id="formGroupExampleInput" placeholder="Job Description">
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="formGroupExampleInput">Last Name</label>
            <input asp-for="LastName" type="text" class="form-control" id="formGroupExampleInput" placeholder="Job Description">
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="formGroupExampleInput">Email</label>
            <input asp-for="Email" type="text" class="form-control" id="formGroupExampleInput" placeholder="Job Description">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="mt-2">
            <button type="submit" style="width:auto" class="btn btn-success">Update User</button>
        </div>
    </form>
</div>

